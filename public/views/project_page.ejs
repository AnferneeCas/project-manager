<html lang="en">
<head>
    <meta charset="UTF-8">
    <!-- <meta name="viewport" content="width=device-width, initial-scale=1.0"> -->
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" type="text/css" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
    <link rel="stylesheet" href="/stylesheets/project_page.css">
    <link rel="stylesheet" href="/stylesheets/basic_template.css">
    <title>Dashboard</title>
</head>
<body>
    <div id="wrapper">

        <!-- Sidebar -->
        <div id="sidebar-wrapper">
            <ul class="sidebar-nav">
                <li class="sidebar-brand">
                    <a href="#">
                        DASHBOARD
                    </a>
                </li>
                <li>
                    <a href="/">Dashboard</a>
                </li>
                <li>
                    <a href="#">Projects</a>
                </li>
                <li>
                    <a href="#">Tasks</a>
                </li>
                <li>
                    <a href="/logout">Logout</a>
                </li>
                
            </ul>
        </div>
        <!-- /#sidebar-wrapper -->

        <!-- Page Content -->
        <div id="page-content-wrapper">
                <div class="container-fluid">
                    <div class="row">
                        <div class="container-fluid">
                            <div class="row">
                                    <div class="col-md-3    ">
                                            <span class="card" style="width: 18rem;">
                                                    <img src="../images/<%=obj.projectimage%>" class="card-img-top" alt="...">
                                                    <span class="card-body ">
                                                      <h5 class="card-title" style="text-align: center;"><%=obj.projecttitle%></h5>
                                                      
                                                    </span>
                                            </span>
                                        </div>
            
                                    <div class="col-md-6">
                                        
                                                  <div class="progress">
                                                    <button type="button" class="btn btn-secondary">Project progress</button>
                                                    <div class="progress-bar progress-bar-striped" role="progressbar" style="width: <%=obj.progressbar%>%" aria-valuenow="10" aria-valuemin="0" aria-valuemax="100"></div>
                                                  </div>
    
                                                  <div class="progress">
                                                     <button type="button" class="btn btn-secondary">Tasks</button>
                                                    <div class="progress-bar progress-bar-striped bg-success" role="progressbar" style="width: <%=obj.taskbar%>%" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100"></div>
                                                  </div>
    
    
                                                  <div class="progress">
                                                    <button type="button" class="btn btn-secondary">Bugs</button>
                                                    <div class="progress-bar progress-bar-striped bg-info" role="progressbar" style="width: <%=obj.bugbar%>%" aria-valuenow="50" aria-valuemin="0" aria-valuemax="100"></div>
                                                  </div>
    
    
                                                 
                                    </div>
    
                                    
                                    <div class="col-md-3">
                                            <nav>
                                                    <ul class="list-group">
                                                            <li class="list-group-item disabled" aria-disabled="true">TEAM MEMBERS</li>
                                                         <% obj.teammembers.forEach(function(member){ %>
                                                            <li class="list-group-item"><%= member.name%></li>

                                                         <%})%>
                                                            <!-- <li class="list-group-item">Anfernee Castillo</li>
                                                            <li class="list-group-item">Arturo Rendon</li>
                                                            <li class="list-group-item">Alberto Lopez</li>
                                                            <li class="list-group-item">Andres Lopez</li>
                                                            <li class="list-group-item">Angel Guevara</li>
                                                            <li class="list-group-item">Rodrigo Bardales</li>
                                                            <li class="list-group-item">Hector Tabora</li> -->
                                                     </ul>
                                                </nav>
                                    </div>
                            </div>
                           
                                
                                    
                        </div>
                    </div>
    
    
                        <div class="row"style="margin-top: 10%;" >
                            <div class="container-fluid">
                                    <table class="table table-hover table-dark">
                                            <thead>
                                              <tr>
                                                <th scope="col" style="text-align: center;">Id</th>
                                                <th scope="col" style="text-align: center;">Owner</th>
                                                <th scope="col" style="text-align: center;">Title</th>
                                                <th scope="col" style="text-align: center;">Status</th>
                                              </tr>
                                            </thead>
                                            <tbody>
                                                <% obj.taskhistory.forEach(function(task){ %>
                                                    <tr onclick="document.location ='/task-page/<%=task.id%>'">
                                                    <th scope="row"><%= task.id%></th>
                                                    <td><%= task.owner%></td>
                                                    <td><%= task.title%></td>
                                                    <td>
                                                        <%if(task.status=='warning'){%>
                                                            <span class="badge badge-warning">Warning</span>
                                                        <%}%>
                                                    </td> 
                                                <%})%>
                                             
                                            </tbody>
                                          </table>
                            </div>
                        </div>
                </div>
            </div>
        <!-- /#page-content-wrapper -->

    </div>
    <!-- /#wrapper -->
</body>
</html>